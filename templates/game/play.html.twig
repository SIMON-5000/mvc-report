{% extends "game/game21_template.html.twig" %}

{% block title %}Tjugoett{% endblock %}

{% block article %}
<article class="play-21">
    <h2>Dra eller stanna?</h2>
    <div class="flash-container">
        {{ include('flash.html.twig') }}
    </div>
    <div class="cards-21">

         <fieldset class=player>
            <legend>Dina kort</legend>
            <div class=player-cards>
                {% for card in playerCards %}
                    <p class="playing-card">
                        {{ card }}
                    </p>
                {% endfor %}
            </div>

            {{ playerScore }}

            <form method="post" action="">
                <p>
                    {% if playerScore < 21 %}
                        <input
                            type="submit"
                            name="draw"
                            value="Dra ett kort"
                            onClick="this.form.action='{{ path('game21_handle_draw') }}';"
                        >
                    {% endif %}
                    <input
                        type="submit"
                        name="hold"
                        value="Stanna"
                        onClick="this.form.action='{{ path('game21_banks_turn') }}';"
                    >
                </p>
            </form>
        </fieldset>


        <fieldset class=bank>
            <legend>Bankens kort</legend>
            <div class=bank-cards>
                {% for card in bankCards %}
                    <p class="playing-card">
                        {{ card }}
                    </p>
                {% endfor %}
            </div>
            {{ bankScore }}
        </fieldset>

    </div>

</article>

{% endblock %}

