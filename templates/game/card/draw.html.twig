{% extends "base.html.twig" %}

{% block title %}Dra ett kort{% endblock %}

{% block main %}
<h1>Spelkort</h1>
<form method="post" action="">
    <p>
        <input
            type="submit"
            name="draw"
            value="Dra ett kort"
            onClick="this.form.action='{{ path('draw_post') }}';"
        >
    </p>
</form>

{{ include('flash.html.twig') }}
{% if drawn %}
    <p>Du drog:
            {% for card in drawn %}
            <span class="playing-card">
                {{ card }}
            </span>
            {% endfor %}
    </p>
{% endif %}
<p>Det Ã¤r {{ deckSize }} kort kvar i leken:</p>
    {% for card in deck %}
    <p class="playing-card">
        {{ card }}
    </p>
    {% endfor %}
<p>Removed cards: 
    {% for card in removed %}
        {{ card }}
    {% endfor %}
</p>
{% endblock %}