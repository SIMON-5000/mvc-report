{% extends 'book/library-template.html.twig' %}

{% block title %}Add book!{% endblock %}

{% block article %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95vw; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello booklovers</h1>
    <p>Är du säker på att du vill radera boken?</p>
    <ul>
        <li>Författare: <span class="book-details">{{ book.getAuthor|e }}</span</li>
        <li>Titel: <span class="book-details">{{ book.getTitle|e }}</span</li>
        <li>ISBN: <span class="book-details">{{ book.getIsbn|e }}</span</li>
    </ul>
    <form method="post" action="{{ path('delete_book', {'id': book.getId }) }}" class="form book-form delete red">
        <input type="submit" name="do_it" value="Radera boken">
    </form>
</div>
{% endblock %}
